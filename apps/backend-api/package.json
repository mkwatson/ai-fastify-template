{
  "name": "backend-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Fastify backend API with TypeScript and comprehensive validation",
  "main": "build/server.js",
  "types": "build/server.d.ts",
  "exports": {
    ".": {
      "types": "./build/server.d.ts",
      "import": "./build/server.js"
    }
  },
  "directories": {
    "src": "src",
    "build": "build",
    "test": "test"
  },
  "scripts": {
    "dev": "fastify start -l info src/server.ts -w",
    "build": "tsc",
    "start": "node build/server.js",
    "lint": "eslint . && prettier --check .",
    "test": "NODE_OPTIONS='--import tsx/esm' vitest run",
    "test:watch": "NODE_OPTIONS='--import tsx/esm' vitest",
    "test:coverage": "NODE_OPTIONS='--import tsx/esm' vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf build",
    "graph:validate": "depcruise src --config ../../.dependency-cruiser.js --validate"
  },
  "keywords": [
    "fastify",
    "typescript",
    "api",
    "backend",
    "server",
    "rest",
    "microservice"
  ],
  "author": {
    "name": "Mark Watson",
    "email": "mark@example.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^22.1.0",
    "@vitest/coverage-v8": "^3.2.3",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-tsconfig": "^3.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.2",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.4.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.2",
    "vitest": "^3.2.3"
  }
}
