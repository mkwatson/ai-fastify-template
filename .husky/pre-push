#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Quick validation before push
echo "ğŸ” Running pre-push validation..."

# Check for uncommitted changes
if ! git diff --quiet || ! git diff --cached --quiet; then
  echo "âŒ Uncommitted changes detected. Please commit or stash changes before pushing."
  exit 1
fi

# Run quick lint and type checks
echo "ğŸ“ Running lint and type checks..."
pnpm ai:quick || {
  echo "âŒ Lint or type check failed. Run 'pnpm lint:fix' to fix issues."
  exit 1
}

# Quick config validation (only utils tests for speed)
echo "ğŸ§ª Validating test configurations..."
pnpm test:config:quick || {
  echo "âŒ Test configuration mismatch detected!"
  echo "This could cause mutation testing to fail in CI."
  echo "Run 'pnpm test:config:verify' for full validation."
  exit 1
}

echo "âœ… Pre-push validation passed!"
