{
  "$schema": "https://raw.githubusercontent.com/conventional-changelog/commitlint/master/docs/commitlint.schema.json",
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "api",
        "backend",
        "frontend",
        "docs",
        "config",
        "test",
        "ci",
        "scripts",
        "deps",
        "security"
      ]
    ],
    "scope-empty": [0],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ]
  }
}
