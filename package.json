{
  "name": "ai-fastify-template",
  "version": "1.0.0",
  "description": "AI-optimized backend template using Fastify + TypeScript with comprehensive guardrails",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "lint:ci": "turbo lint",
    "format": "prettier --write .",
    "ai:quick": "pnpm lint && pnpm type-check",
    "ai:check": "pnpm ai:quick",
    "ai:security": "audit-ci --config audit-ci.json",
    "ai:compliance": "pnpm ai:check && pnpm ai:security && pnpm test && echo 'ðŸŽ‰ All AI compliance checks passed!'",
    "ai:fix": "pnpm lint:fix && echo 'Code formatting and linting fixes applied'",
    "deps:check": "depcheck --config=depcheck.json",
    "deps:unused": "depcheck --config=depcheck.json --json | jq '.dependencies + .devDependencies' | jq 'keys[]'",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "type-check": "turbo type-check",
    "hooks:install": "pre-commit install && pre-commit install --hook-type commit-msg",
    "hooks:uninstall": "pre-commit uninstall && pre-commit uninstall --hook-type commit-msg",
    "hooks:update": "pre-commit autoupdate",
    "hooks:run": "pre-commit run --all-files",
    "hooks:run-manual": "pre-commit run --all-files --hook-stage manual",
    "setup:dev": "pnpm install && pnpm hooks:install && echo 'âœ… Development environment ready!'",
    "validate:commit": "pre-commit run --all-files && pnpm ai:compliance && echo 'ðŸŽ‰ Full validation passed!'"
  },
  "keywords": [
    "fastify",
    "typescript",
    "ai",
    "template",
    "backend",
    "monorepo",
    "turborepo",
    "pnpm"
  ],
  "author": {
    "name": "Mark Watson",
    "email": "mark@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/mkwatson/ai-fastify-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkwatson/ai-fastify-template.git"
  },
  "bugs": {
    "url": "https://github.com/mkwatson/ai-fastify-template/issues"
  },
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "audit-ci": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.4.2",
    "turbo": "^2.5.4"
  }
}
