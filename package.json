{
  "name": "ai-fastify-template",
  "version": "1.0.0",
  "description": "AI-optimized backend template using Fastify + TypeScript with comprehensive guardrails",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "lint:ci": "turbo lint",
    "format": "prettier --write .",
    "ai:quick": "pnpm lint && pnpm type-check",
    "ai:check": "pnpm ai:quick",
    "ai:security": "audit-ci --config audit-ci.json",
    "ai:compliance": "pnpm ai:check && pnpm ai:security && pnpm test && echo 'ðŸŽ‰ All AI compliance checks passed!'",
    "ai:fix": "pnpm lint:fix && echo 'Code formatting and linting fixes applied'",
    "deps:check": "depcheck --config=depcheck.json",
    "deps:unused": "depcheck --config=depcheck.json --json | jq '.dependencies + .devDependencies' | jq 'keys[]'",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "type-check": "turbo type-check",
    "setup:dev": "pnpm install && echo 'ðŸŽ‰ Development environment setup complete!'"
  },
  "keywords": [
    "fastify",
    "typescript",
    "ai",
    "template",
    "backend",
    "monorepo",
    "turborepo",
    "pnpm"
  ],
  "author": {
    "name": "Mark Watson",
    "email": "mark@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/mkwatson/ai-fastify-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkwatson/ai-fastify-template.git"
  },
  "bugs": {
    "url": "https://github.com/mkwatson/ai-fastify-template/issues"
  },
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "audit-ci": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "gitleaks": "^1.0.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^16.1.2",
    "prettier": "^3.4.2",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
