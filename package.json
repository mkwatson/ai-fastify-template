{
  "name": "ai-fastify-template",
  "version": "1.0.0",
  "description": "AI-optimized backend template using Fastify + TypeScript with comprehensive guardrails",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:ci": "turbo lint",
    "format": "biome format . --write",
    "check:staged": "biome check . --staged",
    "ai:quick": "pnpm lint && pnpm type-check",
    "ai:check": "pnpm ai:quick && pnpm ai:patterns",
    "ai:patterns": "node scripts/validate-ai-patterns.cjs",
    "ai:security": "audit-ci --config audit-ci.json",
    "ai:compliance": "pnpm ai:check && pnpm ai:security && pnpm test && echo 'ðŸŽ‰ All AI compliance checks passed!'",
    "ai:fix": "pnpm lint:fix && pnpm lint:eslint:fix && echo 'Manual fixes may be needed for remaining issues'",
    "deps:check": "depcheck --config=depcheck.json",
    "deps:unused": "depcheck --config=depcheck.json --json | jq '.dependencies + .devDependencies' | jq 'keys[]'",
    "clean": "turbo clean",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "type-check": "turbo type-check"
  },
  "keywords": [
    "fastify",
    "typescript",
    "ai",
    "template",
    "backend",
    "monorepo",
    "turborepo",
    "pnpm"
  ],
  "author": {
    "name": "Mark Watson",
    "email": "mark@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/mkwatson/ai-fastify-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkwatson/ai-fastify-template.git"
  },
  "bugs": {
    "url": "https://github.com/mkwatson/ai-fastify-template/issues"
  },
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "audit-ci": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "turbo": "^2.5.4"
  }
}
