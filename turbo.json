{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "test:mutation"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["graph:validate"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["graph:validate"],
      "outputs": ["coverage/**"]
    },
    "test:mutation": {
      "dependsOn": ["test"],
      "outputs": ["reports/**", ".stryker-tmp/**"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["lint"],
      "outputs": []
    },
    "graph:validate": {
      "dependsOn": ["type-check"],
      "outputs": []
    }
  }
}
