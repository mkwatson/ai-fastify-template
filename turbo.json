{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      // Build after core quality gates - mutation testing is strategic/optional
      "dependsOn": ["^build", "type-check"],
      "outputs": ["dist/**"]
    },
    "dev": {
      // Development server - never cache, always run fresh
      "cache": false,
      "persistent": true
    },
    "lint": {
      // Code formatting and style checks - fastest feedback, no dependencies
      "outputs": []
    },
    "clean": {
      // Cleanup operations - never cache, always run fresh
      "cache": false
    },
    "test": {
      // Unit and integration tests - run in parallel with other checks
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      // Test watcher - never cache, always run fresh for development
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      // Coverage analysis - same dependencies as regular tests
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:mutation": {
      // Strategic mutation testing - runs independently when needed
      "dependsOn": ["test"],
      "outputs": ["reports/**", ".stryker-tmp/**", "stryker.log"],
      "cache": true,
      "inputs": ["src/**/*.ts", "test/**/*.test.ts", "stryker.config.mjs"],
      "env": ["NODE_ENV"]
    },
    "type-check": {
      // TypeScript compilation check - can run independently
      "dependsOn": ["^build"],
      "outputs": []
    },
    "graph:validate": {
      // Dependency graph validation - can run in parallel with other checks
      "dependsOn": ["^build"],
      "outputs": []
    },
    "openapi:generate": {
      // OpenAPI specification generation - run after build for accurate specs
      "dependsOn": ["build"],
      "outputs": ["openapi.json"]
    }
  }
}
