{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      // Build only after all quality gates pass - prevents broken artifacts
      "dependsOn": ["^build", "test:mutation"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      // Development server - never cache, always run fresh
      "cache": false,
      "persistent": true
    },
    "lint": {
      // Code formatting and style checks - fastest feedback first
      "outputs": []
    },
    "clean": {
      // Cleanup operations - never cache, always run fresh
      "cache": false
    },
    "test": {
      // Unit and integration tests - run after architecture validation
      "dependsOn": ["graph:validate"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      // Test watcher - never cache, always run fresh for development
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      // Coverage analysis - same dependencies as regular tests
      "dependsOn": ["graph:validate"],
      "outputs": ["coverage/**"]
    },
    "test:mutation": {
      // Mutation testing - always run fresh to detect real logic changes
      "dependsOn": ["test"],
      "outputs": ["reports/**", ".stryker-tmp/**"],
      "cache": false
    },
    "type-check": {
      // TypeScript compilation check - run after code formatting
      "dependsOn": ["lint"],
      "outputs": []
    },
    "graph:validate": {
      // Dependency graph validation - run after type safety confirmed
      "dependsOn": ["type-check"],
      "outputs": []
    }
  }
}
