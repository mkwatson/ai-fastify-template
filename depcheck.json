{
  "ignoreBinPackage": false,
  "skipMissing": false,
  "ignoreMatches": [
    "@types/*",
    "typescript",
    "turbo",
    "prettier",
    "eslint*",
    "@eslint/*",
    "@typescript-eslint/*",
    "eslint-plugin-*",
    "audit-ci",
    "depcheck"
  ],
  "ignorePatterns": ["node_modules", "dist", "build", ".turbo", "coverage"],
  "parsers": {
    "*.js": "es6",
    "*.ts": "typescript",
    "*.json": "json"
  },
  "detectors": [
    "requireCallExpression",
    "importDeclaration",
    "importCallExpression",
    "exportDeclaration"
  ],
  "specials": ["eslint", "prettier", "babel", "typescript", "jest", "vitest"]
}
